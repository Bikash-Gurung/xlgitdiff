{
  "name": "xldiff",
  "displayName": "xldiff",
  "description": "Git diff for excel file",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "xldiff.diffxl",
          "when": "resourceExtname == .xls || resourceExtname == .xlsx",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "xldiff.diffxl",
        "title": "Show Excel Diff"
      }
    ],
    "customEditors": [
      {
        "viewType": "xldiff.viewfile",
        "displayName": "Excel Diff Viewer",
        "selector": [
          {
            "filenamePattern": "*.xls*"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": ">=1.60.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "simple-git": "^3.27.0",
    "xlsx": "^0.18.5"
  }
}
